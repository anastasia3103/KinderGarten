<Page x:Class="KinderGarten.PageMain.PageMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KinderGarten.PageMain"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="800"
      Title="PageMenu">

    <Grid Margin="10">
        <StackPanel>
            <Button Content="Добавить мероприятие" Height="65" Width="200" Name="EventBtn" Click="EventBtn_Click"/>
            <TextBlock FontSize="5"/>
            <Button Content="Добавить группу" Height="65" Width="200" Name="GroupBtn" Click="GroupBtn_Click" />
            <TextBlock FontSize="5"/>
            <Button Content="Журнал" Height="65" Width="200" Name="JournalBtn" Click="JournalBtn_Click"/>
            <TextBlock FontSize="5"/>
            <Button Content="Учет" Height="65" Width="200" Name="AccountingBtn" Click="AccountingBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
